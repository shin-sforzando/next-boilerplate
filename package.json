{
  "name": "next-boilerplate",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "reinstall": "node -e 'fs.rmSync(`node_modules`, {recursive:true, force:true})' && npm install",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "rome check --apply .",
    "format": "rome format --write ."
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "rome check --apply",
      "rome format --write"
    ]
  },
  "dependencies": {
    "@next/font": "13.1.1",
    "next": "13.1.1",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/node": "18.11.18",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "eslint": "8.31.0",
    "eslint-config-next": "13.1.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.0",
    "rome": "^11.0.0",
    "typescript": "4.9.4"
  }
}
